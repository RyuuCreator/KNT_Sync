{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="container-content">
        <h1>User</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Firstname</th>
                    <td>{{ user.firstname }}</td>
                </tr>
                <tr>
                    <th>Lastname</th>
                    <td>{{ user.lastname }}</td>
                </tr>
                <tr>
                    <th>Job</th>
                    <td>{{ user.job }}</td>
                </tr>
                <tr>
                    <th>Created_at</th>
                    <td>{{ user.createdAt ? user.createdAt|date('d-m-Y H:i') : '' }}</td>
                </tr>
                <tr>
                    <th>IsActive</th>
                    <td>{{ user.isActive ? 'Yes' : 'No' }}</td>
                </tr>
            </tbody>
        </table>
        
        <a class="btn-edit" href="{{ path('app_admin_user_edit', {'id': user.id}) }}">Modifier</a>

        {{ include('admin/user/_delete_form.html.twig') }}

        <a href="{{ path('app_admin_user_index') }}">Revenir Ã  la liste</a>
    </div>
{% endblock %}
