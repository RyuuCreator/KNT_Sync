        <h1>Edit Category</h1>

        <div class="content-views">
            <div class="content-category" id="content-category">
                <label for="file"><img id="img" src="{{ category.picture }}"></label>
                <h1 id="input-label">{{ category.label }}</h1>
            </div>
        </div>

        {{ include('admin/category/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

        {{ include('admin/category/_delete_form.html.twig') }}

        <a href="{{ path('app_admin_category_index') }}">Retour au catégories</a>
    </div>
{% endblock %}
