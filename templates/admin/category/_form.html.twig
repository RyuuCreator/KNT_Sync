{{ form_start(form) }}
    <div class="form-control">
        <div class="form-label">
            <label for="category_label">Le nom de la catégorie</label>
        </div>
        <div class="form-input">
            {{ form_widget(form.label) }}
        </div>
        <small>{{ form_help(form.label) }}</small>
        <div class="form-error">
            {{ form_errors(form.label) }}
        </div>
    </div>
    
    <div class="form-control">
        <div class="form-label">
            <label for="category_picture">Image de fond de la catégorie</label>
        </div>
        <div class="form-input">
            {{ form_widget(form.picture) }}
        </div>
        <small>{{ form_help(form.picture) }}</small>
        <div class="form-error">
            {{ form_errors(form.picture) }}
        </div>
    </div>
    <button class="btn">{{ button_label|default('Valider') }}</button>
{{ form_end(form) }}
