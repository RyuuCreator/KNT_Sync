{% extends 'base.html.twig' %}

{% block title %}KNT Sync - Accueil{% endblock %}

{% block carrousel %}{% endblock %}

{% block body %}
    <div id="slider">
        <div id="line">

        </div>
        <ul id="move">
            <li>
                <img src="https://cdn.pixabay.com/photo/2014/05/21/15/47/piano-349928_960_720.jpg">
            </li>
            <li>
                <img src="https://cdn.pixabay.com/photo/2016/10/12/23/22/electric-guitar-1736291_960_720.jpg">
            </li>
            <li>
                <img src="https://cdn.pixabay.com/photo/2017/03/09/20/53/microphone-2130806_960_720.jpg">
            </li>
            <li>
                <img src="https://cdn.pixabay.com/photo/2017/03/19/18/39/turntable-2157300_960_720.jpg">
            </li>
        </ul>
        <div id="back">
            <
        </div>
        <div id="forword">
            >
        </div>
        <div id="dots"></div>
    </div>
    <div class="container-content">
        <div class="container-cat-amb">
            <div class="container-category">
                <div class='controls'>
                    <button class='toggleCat'>Prev</button>
                    <button class='toggleCat' data-toggle='next'>Next</button>
                </div>
                {% for category in categories %}
                    <div class="content-category is-ref">
                        <img src="{{ category.picture }}" alt="">
                        <h1>{{ category.label }}</h1>
                    </div>
                {% endfor %}
            </div>

            <div class="container-ambiance">
                <div class='controls'>
                    <button class='toggleAmb'>Prev</button>
                    <button class='toggleAmb' data-toggle='next'>Next</button>
                </div>
                {% for ambiance in ambiances %}
                    <div class="content-ambiance is-ref">
                        <img src="{{ ambiance.picture }}" alt="">
                        <h1>{{ ambiance.label }}</h1>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="container-ressource">
            <h1>Ressource</h1>
        </div>
    </div>
{% endblock %}

{% block player %}{% endblock %}
